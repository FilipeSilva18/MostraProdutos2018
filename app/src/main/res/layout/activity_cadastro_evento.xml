<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CadastroEventoActivity">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastar Evento"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_nome_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_local_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_descricao_evento"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Descrição do evento"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_data_inicio_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data inicial"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_data_final_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data Final"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_hora_inicio_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora Inicial"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_hora_final_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora Final"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_tipo_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tv_url_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Url Imagem"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/background_button"
            android:onClick="cadastrarEvento"
            android:text="Cadastrar Evento"
            android:textColor="#ffffff" />


</LinearLayout>

    </ScrollView>